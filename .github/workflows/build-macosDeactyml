name: Build macOS VST3

on:
  push:
    branches: [ main ]
  pull_request:

jobs:
  build:
    runs-on: macos-13   # Intel-based macOS runner, compatible with JUCE builds

    steps:
    - name: Checkout repository
      uses: actions/checkout@v4

    # Optional JUCE dependency strategy -----------------------------
    # If JUCE is added as a git submodule, enable this:
    - name: Checkout JUCE submodule
      run: |
        git submodule update --init --recursive
    # If you use JUCE via package manager, comment the above
    # and uncomment a package-install method instead, e.g.:
    #  brew install juce

    # Cache build artifacts (speeds up incremental CI builds)
    - name: Cache CMake
      uses: actions/cache@v4
      with:
        path: |
          **/CMakeFiles
          **/CMakeCache.txt
        key: ${{ runner.os }}-cmake-${{ hashFiles('**/CMakeLists.txt') }}

    - name: Install CMake
      run: brew install cmake ninja || true

    - name: Configure
      run: |
        cmake -B build -G Ninja \
          -DCMAKE_BUILD_TYPE=Release

    - name: Build
      run: |
        cmake --build build --config Release

    # Collect the VST3 bundle
    - name: Archive plugin
      run: |
        mkdir -p artifacts
        find build -name "*.vst3" -exec cp -R {} artifacts/ \;

    - name: Upload VST3 Artifact
      uses: actions/upload-artifact@v4
      with:
        name: HistoryVolumeCurve-macOS-VST3
        path: artifacts

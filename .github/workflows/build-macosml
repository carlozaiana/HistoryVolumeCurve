name: Build macOS Universal VST3

on:
  push:
    branches: [ main ]
  pull_request:

jobs:
  build:
    runs-on: macos-14
    steps:
      - uses: actions/checkout@v4

      - name: Install Ninja
        run: brew install ninja

      - name: Build universal VST3
        run: |
          cmake -B build -G Ninja \
            -DCMAKE_BUILD_TYPE=Release \
            -DCMAKE_OSX_DEPLOYMENT_TARGET=10.13 \
            -DCMAKE_OSX_ARCHITECTURES="arm64;x86_64"
          
          cmake --build build --config Release --parallel $(sysctl -n hw.ncpu)

      - name: Upload VST3
        uses: actions/upload-artifact@v4
        with:
          name: SmoothVolumeHistory-v${{ github.run_number }}-macOS-universal.vst3
          path: build/SmoothVolumeHistory_artefacts/Release/VST3/Smooth Volume History.vst3
